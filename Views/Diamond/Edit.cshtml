@model DiamondCoreAppCS.Models.Diamond

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Diamond</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiamondId" />
            <div class="form-group">
                <label asp-for="DiamondCut" class="control-label"></label>
                <input asp-for="DiamondCut" class="form-control" />
                <span asp-validation-for="DiamondCut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiamondColor" class="control-label"></label>
                <input asp-for="DiamondColor" class="form-control" />
                <span asp-validation-for="DiamondColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiamondClarity" class="control-label"></label>
                <input asp-for="DiamondClarity" class="form-control" />
                <span asp-validation-for="DiamondClarity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiamondCarat" class="control-label"></label>
                <input asp-for="DiamondCarat" class="form-control" />
                <span asp-validation-for="DiamondCarat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
